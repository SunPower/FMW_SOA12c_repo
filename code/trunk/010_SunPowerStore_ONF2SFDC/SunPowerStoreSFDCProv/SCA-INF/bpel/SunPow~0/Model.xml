    <receive name="receiveInput" partnerLink="SunPowerStoreSFDCProv_bpel_client" portType="client:SunPowerStoreSFDCProv_BPEL" operation="process" variable="inputVariable" createInstance="yes" id="BpRcv0"/>
    <assign name="SetTitle" id="BpAss2">
      <copy>
        <from expression="&quot;SunPowerStoreSFDCProv&quot;"/>
        <to variable="title"/>
      </copy>
      <copy>
        <from expression="oraext:setFlowInstanceTitle($title)"/>
        <to variable="title"/>
      </copy>
    </assign>
    <invoke name="InvSFDCLogin" inputVariable="InvSFDCLogin_IV" outputVariable="InvSFDCLogin_OV" partnerLink="SFDCLogin" portType="ns1:SFDCLogin_BPEL" operation="process" bpelx:invokeAsDetail="no" id="BpInv1"/>
    <assign name="AsgnSessionHeader" id="BpAss3">
      <copy>
        <from variable="InvSFDCLogin_OV" part="payload" query="/ns1:SFDCLoginResp/ns1:sessionId"/>
        <to variable="Header" part="SessionHeader" query="/ns2:SessionHeader/ns2:sessionId"/>
      </copy>
    </assign>
    <assign name="AsgnPartnerReference" id="BpAss4">
      <copy>
        <from><EndpointReference xmlns="http://schemas.xmlsoap.org/ws/2003/03/addressing">
<Address/>
</EndpointReference></from>
        <to variable="partnerReference"/>
      </copy>
      <copy>
        <from variable="InvSFDCLogin_OV" part="payload" query="/ns1:SFDCLoginResp/ns1:serverUrl"/>
        <to variable="partnerReference" query="/ns3:EndpointReference/ns3:Address"/>
      </copy>
      <copy>
        <from variable="partnerReference"/>
        <to partnerLink="SFDC"/>
      </copy>
    </assign>
    
    
    <assign name="AsgnSFDCQuery" id="BpAss5">
      <copy>
        <from expression="concat(&quot;Select s.Id, s.Name, s.Order_Date__c From SmartStore_Details__c s where s.Order_Date__c >=&quot;,substring(bpws:getVariableData('inputVariable','payload','/ns4:ProcessSunPowerStoreONFToSFDC/ns4:DataArea/ns6:SunPowerStoreONFToSFDC/ns6:SunPowerStoreONFToSFDCDetails/ns6:OrderResponse/ns6:Summary/ns6:DateRange/ns6:Start'),0,11))"/>
        <to variable="InvSFDCQuery_IV" part="parameters" query="/ns2:query/ns2:queryString"/>
      </copy>
    </assign>
    <invoke name="InvSFDCQuery" inputVariable="InvSFDCQuery_IV" outputVariable="InvSFDCQuery_OV" partnerLink="SFDC" portType="ns2:Soap" operation="query" bpelx:invokeAsDetail="no" bpelx:inputHeaderVariable="Header" id="BpInv2"/>
    <switch name="SwitchDeleteRecords" id="BpSwt0">
      <case condition="bpws:getVariableData('InvSFDCQuery_OV','parameters','/ns2:queryResponse/ns2:result/ns2:size') > 0">
        <bpelx:annotation>
          <bpelx:general>
            <bpelx:property name="userLabel">RecordsAviableForDelete</bpelx:property>
          </bpelx:general>
        </bpelx:annotation>
        <sequence id="BpSeq2">
          <assign name="TrnsSFDCDelete" id="BpAss6">
            <bpelx:annotation>
              <bpelx:pattern>transformation</bpelx:pattern>
            </bpelx:annotation>
            <copy>
              <from expression="ora:doXSLTransformForDoc('Transformations/TrnsSFDCDelete.xsl', $InvSFDCQuery_OV.parameters)"/>
              <to variable="InvSFDCDelete_IV" part="parameters"/>
            </copy>
          </assign>
          <invoke name="InvSFDCDelete" inputVariable="InvSFDCDelete_IV" outputVariable="InvSFDCDelete_OV" partnerLink="SFDC" portType="ns2:Soap" operation="delete" bpelx:invokeAsDetail="no" bpelx:inputHeaderVariable="Header" id="BpInv3"/>
        </sequence>
      </case>
    </switch>
    <assign name="TrnsSFDCIDs" id="BpAss7">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:doXSLTransformForDoc('Transformations/TrnsSFDCIDs.xsl', $inputVariable.payload)"/>
        <to variable="SFDCIDs"/>
      </copy>
    </assign>
    
    <assign name="AsgnSFDCQuery_SmartStoreIDs" id="BpAss8">
      <copy>
        <from expression="concat(&quot;Select u.UserType, u.SmartStore_ID__c, u.IsActive, u.Contact.AccountId, u.ContactId From User u where UserType='PowerPartner' and u.Contact.AccountId != null and  SmartStore_ID__c in ( &quot;,substring(bpws:getVariableData('SFDCIDs','/ns8:SFDCIDs/ns8:SFDCID'),1,string-length(bpws:getVariableData('SFDCIDs','/ns8:SFDCIDs/ns8:SFDCID'))-1),&quot;)&quot;)"/>
        
        <to variable="InvSFDCQuery_IV" part="parameters" query="/ns2:query/ns2:queryString"/>
      </copy>
    </assign>
    <invoke name="InvSFDCQuery" inputVariable="InvSFDCQuery_IV" outputVariable="InvSFDCQuery_OV" partnerLink="SFDC" portType="ns2:Soap" operation="query" bpelx:invokeAsDetail="no" bpelx:inputHeaderVariable="Header" id="BpInv4"/>
    <switch name="SwitchMatchedRecordsAvailable" id="BpSwt1">
      <case condition="bpws:getVariableData('InvSFDCQuery_OV','parameters','/ns2:queryResponse/ns2:result/ns2:size') > 0">
        <bpelx:annotation>
          <bpelx:general>
            <bpelx:property name="userLabel">MatchRecordsAvailable</bpelx:property>
          </bpelx:general>
        </bpelx:annotation>
        <sequence name="SeqMatchedRecordsAvailable" id="BpSeq3">
