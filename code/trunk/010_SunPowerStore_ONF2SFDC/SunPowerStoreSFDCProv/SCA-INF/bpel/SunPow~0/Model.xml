                    </copy>
                    <copy>
                        <from expression="&quot;SunPowerStoreONFToSFDC&quot;"/>
                        <to variable="InvCommonSFDCErrorLogService_IV" part="request" query="/ns10:CommonSFDCErrorLog/ns10:CommonErrorHandlerInputDetails/ns10:InterfaceName"/>
