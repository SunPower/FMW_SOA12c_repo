            <copy>
              <from expression="ora:doXSLTransformForDoc('Transformations/TrnsSFDCUpsertSmartStoreDetails.xsl', $inputVariable.payload, 'InvSFDCQuery_OV.parameters', $InvSFDCQuery_OV.parameters)"/>
              <to variable="InvSFDCUpsertSmartStoreDetails_IV" part="parameters"/>
            </copy>
          </assign>
          <invoke name="InvSFDCUpsertSmartStoreDetails" inputVariable="InvSFDCUpsertSmartStoreDetails_IV" outputVariable="InvSFDCUpsertSmartStoreDetails_OV" partnerLink="SFDC" portType="ns2:Soap" operation="upsert" bpelx:invokeAsDetail="no" bpelx:inputHeaderVariable="Header" id="BpInv5"/>
        </sequence>
      </case>
